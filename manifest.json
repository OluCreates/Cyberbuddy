{
  "manifest_version": 3,
  "name": "CyberBuddy",
  "version": "1.0.0",
  "description": "AI content detection for the web",
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://cyberbuddy.app/*", "http://localhost:*/*", "https://localhost:*/*"],
      "js": ["website-bridge.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
